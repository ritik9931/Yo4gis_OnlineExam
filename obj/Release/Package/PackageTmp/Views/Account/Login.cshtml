@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login | Your App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            padding: 40px 30px;
            max-width: 420px;
            width: 100%;
        }

            .login-card h3 {
                font-weight: 700;
                color: #333;
            }

        .form-control {
            height: 48px;
            border-radius: 8px;
        }

        .input-group-text {
            background: #f1f3f5;
            border: none;
            border-radius: 8px 0 0 8px;
        }

        .btn-login {
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            border: none;
            height: 48px;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-login:hover {
                opacity: 0.9;
            }

        .login-footer a {
            text-decoration: none;
            font-weight: 600;
        }
        .login-logo {
            max-width: 100px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <div class="login-card">
        <div class="text-center mb-4">
            <img src="~/assets/images/bhatt.png" alt="Logo" class="login-logo" />
            <h3>Bhatt Career Shapers</h3>
            <p class="text-muted">
                <strong style="color:#0d6efd; font-size:22px;">Online Exam Portal</strong><br />
                <span style="font-size:16px;">Login to your account</span>
            </p>


        </div>

        <form method="post" action="/Account/Login">
            <div class="mb-3">
                <label class="form-label">User ID/Mobile Number</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-user"></i></span>
                    <input type="text" name="username" class="form-control" placeholder="Enter username or email" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                    <input type="password" name="password" class="form-control" placeholder="Enter password" required />
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                <a href="#" class="text-primary small">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-login w-100 text-white mb-3">
                <i class="fa fa-sign-in-alt me-1"></i> Login
            </button>
        </form>

        <div class="login-footer text-center">
            <span class="text-muted">Don’t have an account?</span>
            <a href="#" class="text-primary">Contact Admin</a>
        </div>
    </div>

</body>
</html>
