@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sign Up | Yo4GIS Solutions</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/vendors/css/vendors.min.css" />
    <link rel="stylesheet" href="~/assets/css/theme.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <style>
        body {
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            font-family: 'Segoe UI', sans-serif;
        }

        .signup-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .signup-card {
            background: #fff;
            border-radius: 16px;
            padding: 35px 30px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

        .signup-header {
            text-align: center;
            margin-bottom: 25px;
        }

            .signup-header h2 {
                font-weight: 700;
                color: #4e73df;
                margin-bottom: 5px;
            }

            .signup-header p {
                color: #6c757d;
                font-size: 14px;
            }

        .form-control {
            height: 45px;
            border-radius: 10px;
        }

        .btn-signup {
            background: linear-gradient(135deg, #4e73df, #1cc88a);
            border: none;
            height: 45px;
            border-radius: 10px;
            font-weight: 600;
        }

            .btn-signup:hover {
                opacity: 0.9;
            }

        .signup-footer {
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }

            .signup-footer a {
                font-weight: 600;
                text-decoration: none;
            }
    </style>
</head>
<body>

    <div class="signup-wrapper">
        <div class="signup-card">

            <!-- Header -->
            <div class="signup-header">
                <h2>Yo4GIS Solutions</h2>
                <p>Create your account</p>
            </div>

            <!-- Form -->
            <form id="frmUser">
                <div class="mb-3">
                    <input type="text" id="FullName" name="FullName" class="form-control" placeholder="Full Name" required />
                </div>

                <div class="mb-3">
                    <input type="email" id="Email" name="Email" class="form-control" placeholder="Email Address" required />
                </div>

                <div class="mb-3">
                    <input type="text" id="Username" name="Username" class="form-control" placeholder="Username" required />
                </div>
                <div class="mb-3">
                    <input type="text" id="Mobile" name="Mobile" class="form-control" placeholder="Mobile Number" required />
                </div>

                <div class="mb-3">
                    <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" required />
                </div>

                <div class="mb-3">
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
                </div>

                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-signup text-white">Sign Up</button>
                </div>
            </form>

            <!-- Footer -->
            <div class="signup-footer">
                <span class="text-muted">Already have an account?</span>
                <a href="@Url.Action("Login", "Account")" class="text-primary">Login</a>
            </div>

        </div>
    </div>

    <!-- JS -->
    <script>
        $(document).ready(function () {
            $("#frmUser").on("submit", function (e) {
                e.preventDefault();
                var objData = {
                    FullName: $("#FullName").val(),
                    Email: $("#Email").val(),
                    Username: $("#Username").val(),
                    Mobile: $("#Mobile").val(),
                    Password: $("#Password").val(),
                    ConfirmPassword: $("#ConfirmPassword").val()

                }

                var formData = JSON.stringify(objData);



                 $.ajax({
    url: "@Url.Action("Register", "Account")",   // Controller action
    type: 'POST',
                     data: formData,
    contentType: 'application/json; charset=utf-8',
    success: function (res) {
        if (res.success) {
            toastr.success(res.message, "Success");


        } else {
            toastr.error(res.message, "Error");
        }
    },
    error: function (err) {
        console.error(err);
        alert("Error while sending data to server.");
    }
});
            });
        });
    </script>
    <script src="~/assets/vendors/js/vendors.min.js"></script>
</body>
</html>
