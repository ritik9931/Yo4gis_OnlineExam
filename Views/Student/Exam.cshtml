    var studentTable = null;
    var exam_id = null;
    var student_id = null;
    $(document).ready(function () {
        GetAllAssignedExam();
        $('#btnSubmit').on('click', function () {
            let from = $('#subName').val();
            let to = $('#subCode').val();
            var dataObj = { "sub_name": from, "sub_code": to };
            saveSubject(dataObj);
            //alert('From: ' + from + '\nTo: ' + to);
        });

        $("#quizForm").on("submit", function (e) {
            clearInterval(interval);
            $("#idTimer").hide();
            e.preventDefault();
            let answers = [];

            $('.question-card').each(function () {
                let questionId = $(this).data('question-id');
                let selected = $(this).find('input[type=radio]:checked').val() == undefined ? null : $(this).find('input[type=radio]:checked').val();

                //if (selected) {
                    answers.push({
                        QuestionId: questionId,
                        SelectedOption: selected,
                        ExamId: exam_id,
                        StudentId: student_id
                    });
                //}
            });

            //$.ajax({
            //    url: '/Quiz/SubmitAnswers',
            //    type: 'POST',
            //    data: formData,
            //    success: function (res) {
            //        if (res.success) {
            //            alert("Exam submitted!\nScore: " + res.score + " / " + res.total);
            //            location.reload(); // or redirect
            //        }
            //    }
            //});
             $.ajax({
    url: "@Url.Action("SubmitAnswers", "Home")",   // Controller action
    type: 'POST',
                 data: JSON.stringify(answers),
    contentType: 'application/json; charset=utf-8',
    success: function (res) {
        if (res.status=="success") {
            toastr.success("Exam Submit Successfully", "Success");
            $(".quiz-container").hide();
            clearInterval(interval);
            //$("#timer").text("00:00").hide();
            $("#resStatus").show();
            //$("#resStatus")
            //    .text(res.isPassed ? "Pass" : "Fail")
            //    .removeClass("pass fail")
            //    .addClass(res.isPassed ? "pass" : "fail");

            // 🟢 Fill result table
            $("#resTotalQuestions").text(res.totalQuestions);
            $("#resCorrectCount").text(res.correctCount);
            $("#resObtainedMarks").text(res.obtainedMarks);
            $("#resTotalMarks").text(res.totalMarks);
            $("#resStatus").text(res.isPassed ? "Pass ✅" : "Fail ❌");
